	}//printArray
	
	public static<ItemType> void main(String [] args)
	{
		Double [] DArray = {1.1, 2.2, 3.3, 4.4};	//declare double array
		String [] SArray = {"Hello World"};
		Integer [] IArray = {1, 2, 3, 4, 5};
		Character [] CArray = {'h', 'a', 'h', 'a'};	// declare a character array
